@model Ecommerce.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1>Excluir Categoria</h1>

<h3>Você tem certeza que deseja excluir esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCategoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para listagem</a>
    </form>
</div>
